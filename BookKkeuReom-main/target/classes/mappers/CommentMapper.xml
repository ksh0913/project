<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mysite.bookkkeureom.feed.DAO.CommentDAO">

    <!-- 새로운 댓글 추가 -->
    <insert id="createComment" parameterType="com.mysite.bookkkeureom.feed.DTO.CommentDTO">
        INSERT INTO Comments (comment_id, user_id, comment_content, comment_created_date, comment_modify)
        VALUES (#{commentId}, #{userId}, #{commentContent}, #{commentCreatedDate}, #{commentModify})
    </insert>

    <!-- 댓글 조회 -->
    <!-- <select id="readComment" parameterType="int" resultMap="commentWithUserResultMap">
        SELECT c.comment_id, c.user_id, c.comment_content, c.comment_created_date,
               u.user_img AS userImg
        FROM Comments c
        INNER JOIN Users u ON c.user_id = u.user_id
        WHERE c.comment_id = #{commentId}
    </select> -->

    <!-- 댓글 정보 업데이트 -->
    <update id="updateComment" parameterType="com.mysite.bookkkeureom.feed.DTO.CommentDTO">
        UPDATE Comments
        SET user_id = #{userId}, comment_content = #{commentContent},
            comment_created_date = #{commentCreatedDate}, comment_modify = #{commentModify}
        WHERE comment_id = #{commentId}
    </update>

    <!-- 댓글 삭제 -->
    <delete id="deleteComment" parameterType="int">
        DELETE FROM Comments WHERE comment_id = #{commentId}
    </delete>

    <!-- 모든 댓글 리스트 조회 -->
